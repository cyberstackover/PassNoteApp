<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="actionModeSplitBackground">@null</item>
        <item name="listItemBackground">@drawable/list_item_mtrl</item>
        <item name="settingItemBackground">@drawable/bottom_line</item>
        <item name="cardViewDrawable">@drawable/cardview</item>
        <!-- Above items should share the same value in dark and light themes
             Below are common values but differ in dark and light themes-->
        <item name="iconColorNormal">@color/text_white_sec</item>
        <item name="textColorNormal">@color/text_white_std</item>
        <item name="navigationMenuSeparator">@drawable/div</item>
        <item name="android:dialogTheme">@style/DialogTheme.Dark</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Dark</item>
    </style>

    <style name="AppLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="actionModeSplitBackground">@null</item>
        <item name="listItemBackground">@drawable/list_item_mtrl</item>
        <item name="settingItemBackground">@drawable/bottom_line_light</item>
        <item name="cardViewDrawable">@drawable/cardview</item>
        <!-- Above items should share the same value in dark and light themes
             Below are common values but differ in dark and light themes-->
        <item name="iconColorNormal">@color/text_black_sec</item>
        <item name="textColorNormal">@color/text_black_std</item>
        <item name="navigationMenuSeparator">@drawable/div_light</item>
        <item name="android:dialogTheme">@style/DialogTheme.Light</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Light</item>
    </style>

    <style name="AppDark.Default">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/orange_a200</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
    </style>

    <style name="AppLight.Default">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/orange_a200</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
    </style>

    <style name="AppDark.IndigoPink">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorAccent">@color/pink_a200</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="android:dialogTheme">@style/DialogTheme.IndigoPinkDark</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.IndigoPinkDark</item>
    </style>

    <style name="AppLight.IndigoPink">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorAccent">@color/pink_a200</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="android:dialogTheme">@style/DialogTheme.IndigoPinkLight</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.IndigoPinkLight</item>
    </style>

    <style name="AppDark.PurpleRed">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorAccent">@color/red_a200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
    </style>

    <style name="AppLight.PurpleRed">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorAccent">@color/red_a200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
    </style>

    <style name="AppDark.TealAmber">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorAccent">@color/amber_a200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
    </style>

    <style name="AppLight.TealAmber">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorAccent">@color/amber_a200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
    </style>

    <style name="AppDark.LightblueCyan">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorAccent">@color/cyan_a200</item>
        <item name="colorPrimaryDark">@color/lightblue_700</item>
    </style>

    <style name="AppLight.LightblueCyan">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorAccent">@color/cyan_a200</item>
        <item name="colorPrimaryDark">@color/lightblue_700</item>
    </style>
</resources>