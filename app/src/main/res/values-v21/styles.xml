<resources>

    <style name="atButtonStyle" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/text_white_std</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Material.Button"/>
    <style name="Button.Accent" parent="@android:style/Widget.Material.Button">
        <item name="android:background">@drawable/button_accent_mtrl</item>
    </style>
    <style name="Button.Flat" parent="@android:style/Widget.Material.Button.Borderless"/>
    <style name="Button.Flat.Accent" parent="@android:style/Widget.Material.Button.Borderless.Colored"/>

    <style name="DialogTheme.Dark" parent="@android:style/Theme.Material.Dialog">
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogTheme.Light" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NavigationSeparatorTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>