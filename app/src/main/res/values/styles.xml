<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="atButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_white_std</item>
    </style>
    
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">?attr/defaultButtonDrawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="Button.Accent">
        <item name="android:background">?attr/accentButtonDrawable</item>
    </style>
    
    <style name="Button.Flat">
        <item name="android:background">?attr/flatButtonDrawable</item>
    </style>
    
    <style name="Button.Flat.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:gravity">start|left|center_vertical</item>
    </style>

    <style name="DialogTheme.DefaultDark" parent="@style/Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/orange_a200</item>
    </style>

    <style name="DialogTheme.DefaultLight" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange_a200</item>
    </style>

    <style name="DialogTheme.IndigoPinkDark" parent="@style/Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/pink_a200</item>
    </style>

    <style name="DialogTheme.IndigoPinkLight" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/pink_a200</item>
    </style>

    <style name="DialogTheme.PurpleRedDark" parent="@style/Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/red_a200</item>
    </style>

    <style name="DialogTheme.PurpleRedLight" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red_a200</item>
    </style>

    <style name="DialogTheme.TealAmberDark" parent="@style/Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/amber_a200</item>
    </style>

    <style name="DialogTheme.TealAmberLight" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/amber_a200</item>
    </style>

    <style name="DialogTheme.LightblueCyanDark" parent="@style/Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/cyan_a200</item>
    </style>

    <style name="DialogTheme.LightblueCyanLight" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/cyan_a200</item>
    </style>
    
    <style name="SnackbarAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Snackbar" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NavigationSeparatorTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
